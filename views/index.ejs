<!DOCTYPE html>
<head>
  <title>Eureka | Home</title>
  <%- include("./partials/fontsAndBootstrap") %>
  <link rel="stylesheet" href="/leaflet/leaflet.css" />
  <link rel="stylesheet" href="/styles/index.css" />
</head>

<body class="container-fluid p-0 nunito">
  <div class="row g-0">
    <header class="col-8 bg-light text-dark p-2">
      <h1 class="fw-bold display-3">Eureka!</h1>
      <p class="m-0">The internet's lost-and-found.</p>
    </header>
    <nav
      class="col-4 bg-dark text-light d-flex align-items-center justify-content-center p-2"
    >
      <a href="/createPost" class="link-light h4 m-0">Create post</a>
    </nav>
  </div>

  <main class="position-relative">
    <section id="map" class="vh-100 position-relative z-0"></section>
    <div class="position-absolute z-1 top-0 vh-100 vw-100" id="mapOverlayGrid">
      <form id="searchBar" class="container-fluid">
        <div class="row align-items-center h-100">
          <input
            type="search"
            id="searchInput"
            placeholder="Search listing"
            class="col-10 col-sm-11"
          />
          <button type="submit" class="col-2 col-sm-1">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </form>

      <button type="button" id="previousPin" class="bg-transparent border-0">
        <i class="bi bi-arrow-left-circle-fill display-3 opacity-75"></i>
      </button>

      <button type="button" id="nextPin" class="bg-transparent border-0">
        <i class="bi bi-arrow-right-circle-fill display-3 opacity-75"></i>
      </button>
    </div>
  </main>
  <%- include("./partials/indexScripts") %>
</body>
